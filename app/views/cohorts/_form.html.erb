<%= simple_form_for @cohort do |form| %>
    <%= form.input :course_id, collection: @courses.map{|c|[c.title, c.id]} %>
    <%= form.label "Students" %>


    <%= form.collection_select :user_id, User.where(is_admin:false).order(:first_name), :id, :first_name,
        {},
        { multiple: true, class: 'chosen-select' } %>

    <%= form.submit class: 'btn btn-primary pull-right mt-3' %>
<% end %>
